<div class="row">
  <div class="center-block">
      <div class="container-fluid">
        <div class="justify-content-center">
          <div class="col-sm-12 text-center">
            <form role="form-inline">
              <%= form_for [@user, @handle] do |f| %>
              <br>
              <div class="form-group">
                <label for="HandleNameInput">Handle Name</label>
                <%= f.text_field :name, :class => 'form-control' %>
              </div>

              <br>
              <div class="form-group">
                <label for="HandleTypeSelection"> Select Handle Type</label>
                <%= f.select :handle_type_id, HandleType.all.collect { |h| [ h.name, h.id ] },
                 include_blank: false, :class => 'form-control' %>
              </div>
              <br>
              <div class="badge badge-success">
                <%= f.hidden_field :user_id, :value => @user.id %>
                <%= f.submit "Submit", :class => 'form-control' %>
              </div>
            <% end %>
            </form>
          </div>
        </div>
      </div>
    </div>
</div>
