<div class="form">
<%= form_for [@user, @handle] do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %> <br>

  <%= f.select :handle_type_id, HandleType.all.collect { |h| [ h.name, h.id ] }, include_blank: false %>
  <br>
  
  <%= f.hidden_field :user_id, :value => @user.id %>
  <%= f.submit "Submit" %>
<% end %>
</div>
