<div class="row">
  <div class="center-block">
      <div class="container-fluid">
        <div class="justify-content-center">
          <br>
          <div class="col-sm-12 text-center">Your Connections</div>
          <div class="col-sm-12">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">First Name</th>
                  <th scope="col">Last Name</th>
                  <th scope="col">Github Handle</th>
                  <th scope="col">Twitter Handle</th>
                  <th scope="col">LinkedIn Handle</th>
                  <th scope="col"></th>
                </tr>
              </thead>
            <tbody>
              <% @connections.each do |connection| %>
              <tr class="connection">
                <td><%= link_to connection.scanned_user.first_name, connection_path(connection) %></td>
                <td><%= connection.scanned_user.last_name %></td>
                <td><%= connection.github_handle.name%></td>
                <td><%= connection.twitter_handle.name%></td>
                <td><%= connection.linkedin_handle.name%></td>
                <td> <%= link_to "Delete Connection", connection_path(connection), method: :delete %>  </td>
                <% end %>
              </tr>
          </tbody>
        </table>
    <%= link_to "Add Connection", new_connection_path  %>
        </div>
      </div>
    </div>
  </div>
</div>
