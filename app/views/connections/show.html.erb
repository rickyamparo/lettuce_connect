<div class="row">
  <div class="center-block">
      <div class="container-fluid">
        <div class="justify-content-center">
          <div class="col-sm-12 ">
<br>
<div class="card" style="width: 50rem; ">
  <div class="card-header font-weight-bold text-justify bg-info">
    <%=@connection.scanned_user.full_name %>
  </div>
<div class="github-handle">
  <div class="card-header">
    Github Handle: <%= link_to @connection.github_handle.name, "http://www.github.com/#{@connection.github_handle.name}" %>
  </div>
  <div class="row">
  <% @github_events.each do |github_event|%>
    <div class="github-event col-sm-4">
      <ul>
        <li>Event Type: <%= github_event.type %></li>
        <li>Repo: <%= github_event.repo %></li>
        <li>Date of Event: <%= github_event.date %></li>
      </ul>
  </div>
  <% end  %>
</div>
</div><br>

  <div class="twitter-handle">
    <div class="card-header">
    Twitter Handle: <%= link_to @connection.twitter_handle.name, "http://www.twitter.com/#{@connection.twitter_handle.name}" %><br>
  </div>
    <div class="twitter-tweet col-sm-12">
      Most Recent Tweet: <%= @recent_tweet.text %> <br><br>
      Date: <%= @recent_tweet.date %>
  </div>
</div>
  <br>

<div class="linkedin-handle">
  <div class="card-header">
    LinkedIn Handle: <%= link_to @connection.linkedin_handle.name, "http://www.linkedin.com/in/#{@connection.linkedin_handle.name}" %>
  </div>
</div>

<br><br>


<div class="text-right">
  <%= link_to "Delete Connection", connection_path(@connection), method: :delete %>
</div>

</div>
</div>
</div>
</div>
</div>
</div>
