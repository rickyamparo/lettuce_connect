<!DOCTYPE html>
<html>
  <head>
    <title>LettuceConnect</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    'root', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="navbar-brand logo"> <%= link_to "Lettuce Connect", root_path %> </div>
      <ul class="nav mr-auto">
      <% if current_user %>
          <li class="nav-item">
            <%= link_to "Logout", logout_path, method: :delete %>
          </li>
          <li class="nav-item">
            <%= link_to "Connections", connections_path %>
          </li>
          <li class="nav-item">
            <%= link_to "Add Handle", new_user_handle_path(current_user) %>
          </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "Login", login_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Register", new_user_path %>
        </li>
        <% end %>
      </ul>
  </nav>
  <% flash.each do |type, message| %>
        <div class="green-flash">
          <%= message %>
        </div>
          <% end %>
    <%= yield %>
  </body>
</html>
